<?xml version="1.0" encoding="UTF-8"?>
<model name="sample:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<!-- Optional meta-data about the model -->
	<description>Sample Custom Model</description>
	<author>Hossein Akhlaghpour</author>
	<version>1.0</version>

	<!-- Imports are required to allow references to definitions in other models -->
	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="sample.model" prefix="sample" />
	</namespaces>

	<constraints>
		<constraint name="sample:siteList" type="sample.model.constraint.Sites">
			<parameter name="caseSensitive">
				<value>true</value>
			</parameter>
			<parameter name="sourceUrl">
				<value>http://localhost:8080/alfresco/d/d/workspace/SpacesStore/f8997f9c-a20f-4305-a9a9-d541754eba98/sites?guest=true
				</value>
			</parameter>
		</constraint>
		<constraint name="sample:languageList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>English</value>
					<value>Farsi</value>
					<value>Danish</value>
					<value>Chinese</value>
					<value>Spanish</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="sample:searchBasedConstraint"
			type="sample.model.constraint.LuceneSearchBasedListConstraint">
			<parameter name="query">
				<value>
					ID:"workspace://SpacesStore/a580e314-6468-4fd1-9064-ead45dbbcb6e"
				</value>
			</parameter>
		</constraint>
		<constraint name="sample:dependentConstraint"
			type="sample.model.constraint.LuceneSearchBasedListConstraint">
			<parameter name="query">
				<value>
					ASPECT:"{sample.model}national"
					AND
					(@\{sample.model\}name:"${sample:country}"
					TEXT:"${sample:country}")
				</value>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<type name="sample:corpDoc">
			<title>Sample Corporate Doc</title>
			<parent>cm:content</parent>
		</type>
		<type name="sample:socialDoc">
			<title>Sample Social Doc</title>
			<parent>cm:content</parent>
			<mandatory-aspects>
				<aspect>sample:social</aspect>
			</mandatory-aspects>
		</type>
	</types>

	<aspects>
		<aspect name="sample:temporal">
			<title>Adding common types</title>
			<properties>
				<property name="sample:expirationDate">
					<type>d:date</type>
				</property>
				<property name="sample:language">
					<type>d:text</type>
					<constraints>
						<constraint ref="sample:languageList" />
					</constraints>
				</property>
				<property name="sample:sites">
					<type>d:text</type>
					<multiple>true</multiple>
					<constraints>
						<constraint ref="sample:siteList" />
					</constraints>
				</property>
				<property name="sample:isConfirmed">
					<type>d:boolean</type>
					<default>true</default>
				</property>
				<property name="sample:zipCode">
					<type>d:int</type>
				</property>
				<property name="sample:cost">
					<type>d:double</type>
				</property>
			</properties>
			<associations>
				<association name="sample:relatedDocs">
					<title>Related Docs</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</aspect>
		<aspect name="sample:social">
			<title>Adding properties in a social network</title>
			<properties>
				<property name="sample:tags">
					<type>d:text</type>
					<multiple>true</multiple>
				</property>
			</properties>
		</aspect>
		<aspect name="sample:national">
			<title>Country and its cities</title>
			<properties>
				<property name="sample:country">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
					<constraints>
						<constraint ref="sample:searchBasedConstraint" />
					</constraints>
				</property>
				<property name="sample:city">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
					<constraints>
						<constraint ref="sample:dependentConstraint" />
					</constraints>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>
