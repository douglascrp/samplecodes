<persistence xmlns="http://java.sun.com/xml/ns/persistence"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
		version="1.0">

	<persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <class>com.samplecodes.model.Company</class>
        <class>com.samplecodes.model.Employee</class>
        <class>com.samplecodes.model.User</class>
        <class>com.samplecodes.model.Cargo</class>
        <class>com.samplecodes.model.Location</class>
        <class>com.samplecodes.model.Customer</class>
        <class>com.samplecodes.model.Driver</class>
        <class>com.samplecodes.model.Event</class>
        <class>com.samplecodes.model.Shipment</class>
    </persistence-unit>

</persistence>
